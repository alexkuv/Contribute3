{
  "name": "Contribute3",
  "author": "Alex (kuvaldin.ai95@gmail.com)",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "22.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexkuv/Contribute3.git"
  },
  "bugs": {
    "url": "https://github.com/alexkuv/Contribute3/issues"
  },
  "homepage": "https://github.com/alexkuv/Contribute3#readme",
  "scripts": {
    "dev": "concurrently \"npm run start\" \"npm run frontend:wait\"",
    "backend": "cd backend && npm run start:dev",
    "frontend": "cd frontend && npm run dev",
    "frontend:wait": "cd frontend && npx wait-on http://localhost:8000/health --timeout 60000 && npm run dev",

    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",

    "start": "cd backend && npm run start:dev",
    "prod": "npm run build && npm run start"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.4"
  }
}
